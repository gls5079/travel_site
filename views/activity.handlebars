  <h4> Menu of operations</h4>
   <ul class = "menu">
        <li class = "homeButton"> <a href='/'>Home</a></li>
        <li class = "menuButton"> <a href='/city'>List & Add Cities</a></li>
        <li class = "menuButton"> <a href='/activity'>List & Add Activities</a></li>
        <li class = "menuButton"> <a href='/hotel'>List & Add Hotels</a></li>
        <li class = "menuButton"> <a href='/airline'>List & Add Airlines</a></li>
        <li class = "menuButton"> <a href='/traveler'>List & Add Travelers</a></li>
        <li class = "menuButton"> <a href='/activityprice'>List & Add Activity Prices</a></li>
        <li class = "menuButton"> <a href='/hotelprice'>List & Add Hotel Prices</a></li>
        <li class = "menuButton"> <a href='/airlineprice'>List & Add Airline Prices</a></li>
        <li class = "menuButton"> <a href='/tripcriteria'>List & Add Trip Criteria</a></li>
        <li class = "menuButton"> <a href='/destinationtype'>List & Add Destination Types</a></li>
        <br>


  </ul>
  <br/>

<h3>Add new activity:</h3>
<form id="addActivity" action="/activity" method="post">
    Activity name: <input type="text" name="name"><br>
    Phone number: <input type="text" name="phone_number" min="1000000000"><br>
    City: <select name='city_id'>
        {{#each cities}}
          <option value='{{id}}'>{{name}}</option>
        {{/each}}
    </select>
    <br>
	<input type="submit" value="Submit">
 </form>
<br/>

<form id='filter_activity' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Filter by City </label>
    <select id='city_filter' name="city"> 
    </select><br>
    <input type="button" value="Filter" onclick="filterActivity()">
</form>


<h3>Current Activities:</h3>
<table>
    <thead> 
        <th>Activity Name</th> 
        <th>Phone Number</th>
		<th>City</th>
    </thead> 
    <tbody>
        {{#each activity}} 
        <tr> 
            <td>{{name}}</td> 
            <td>{{phone_number}}</td>
	    <td>{{cityName}}</td>
            <td><button onclick="deleteActivity({{id}})">Delete</button></td>
            <td><a href="/activity/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</html>
